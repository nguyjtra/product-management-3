  .card.mb-3
    .card-header ACTION
    .card-body
      div(class='input-group' box-action)
        select(class='custom-select')
          option(value='') Choose...
          option(value='active') ACTIVE
          option(value='inactive') INACTIVE
          option(value='delete') DELETE
        .input-group-append
          button.btn.btn-outline-secondary(type='button') SEND

    form(form-search="")
      .input-group
        input(
          type="text"
          placeholder="find...."
          name="keyword"
          class="form-control"
          value=keyword
        )
        .input-group-append
          button(
            class="btn btn-success"
            type="submit"
          ) find


  table.table.table-hover.table-sm
    thead
      tr
        th 
          input(type="checkbox", name="checkAll")
        th number
        th img
        th topic
        th price
        th position
          button(class="btn btn-warning btn-sm" changePosition) 
        th active/inactive
        th action
    tbody
      each item,index in product
        tr 
          td  
            input(type="checkbox", name="checkItem", value=item.id)
          td #{index+1}
          td
            img(
              src=item.thumbnail
              alt=item.title
              width="80px"
              height="auto" 
            )
          td #{item.title}
          td #{item.price}$
          td 
            input(type="number" name='position' value=item.position  style="width:60px" min='1' id=item.id)
          td
            if(item.status=="active")
              button(

                link =`/${prefixAdmin}/products/changeStatus/inactive/${item.id}` 
                class ="badge badge-success"
                button-change-status
              ) active
            else 
              button(
                link =`/${prefixAdmin}/products/changeStatus/active/${item.id}` 
                class ="badge badge-danger"
                button-change-status
              ) inactive
          td
            a(
              href=`/${prefixAdmin}/products/Preview/${item.id}`
              class="btn btn-warning btn-sm"
            ) edit
            button(class="btn btn-danger btn-sm ml-1" button-delete=item.id) delete
