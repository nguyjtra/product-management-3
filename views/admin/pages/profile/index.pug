extends ../../layout/default.pug

block main
  h1(class="mb-4") Your Profile

  if (user.avatar)
    img(src=user.avatar width="150px" class="mb-3")

  if (user.fullName)
    p Full Name: <b>#{user.fullName}</b>

  if (user.email)
    p Email: <b>#{user.email}</b>

  if (user.phone)
    p Phone Number: <b>#{user.phone}</b>

  p 
    span Status: 
    span
        <b>#{user.status === "active" ? "Active" : "Inactive" }</b>

  if (role.title)
    p Role: <b>#{role.title}</b>