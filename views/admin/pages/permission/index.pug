extends ../../layout/default.pug
block main
  h1(class="mb-4") Permission
  if(records)
    div(class="text-right")
      button(
        type="submit"
        class="btn btn-primary mb-3"
        button-submit=`/${prefixAdmin}/permission/Update`
      ) Update
    table(
      class="table table-hover table-sm"
      table-permissions
    )
      thead
        tr
          th feature
          each item in records
            th(
              class="text-center"
              role-id=item.id
            ) #{item.title}
      tbody
        //- Danh sách sản phẩm
        tr
          td(colspan="4")
            b Product List
        tr
          td watch
          each item in records
            td(class="text-center")
              input(
                type="checkbox" 
                data-id=item.id 
                data-name="products_view"
                checked=(item.permission.includes("products_view") ? true : false)
              )
        tr
          td Add new
          each item in records
            td(class="text-center")
              input(
                type="checkbox" 
                data-id=item.id
                data-name="products_create"
                checked=(item.permission.includes("products_create") ? true : false)
              )
        tr
          td Edit
          each item in records
            td(class="text-center")
              input(
                type="checkbox" 
                data-id=item.id
                data-name="products_edit"
                checked=(item.permission.includes("products_edit") ? true : false)
              )
        tr
          td Delete
          each item in records
            td(class="text-center")
              input(
                type="checkbox" 
                data-id=item.id
                data-name="products_delete"
                checked=(item.permission.includes("products_delete") ? true : false)
              )

        //- Danh mục sản phẩm
