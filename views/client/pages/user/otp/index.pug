extends ../../../layouts/default.pug
include ../../../mixins/box-head.pug

block main
  .container.my-3
    .row
      .col-8.mx-auto
        +box-head('OTP')

        form(
          action="/user/password/otp"
          method="POST"
        )
          div(class="form-group")
            label(for="email") Email
            input(
              type="email"
              class="form-control"
              id="email"
              name="email"
              required
              readonly
              value=email
            )
          div(class="form-group")
            label(for="otp") OTP code
            input(
              type="text"
              class="form-control"
              id="otp"
              name="otp"
              required
            )
          div(class="form-group")
            button(
              type="submit"
              class="btn btn-primary btn-block"
            ) Confirm


        a(href="/user/password/forgot") Forgot password ?